{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": ".",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "index.ts",
    "credentials/**/*",
    "nodes/**/*",
    "nodes/**/*.json"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
